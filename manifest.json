{
  "manifest_version": 3,
  "name": "Tab Feed (POC)",
  "version": "0.0.1",
  "permissions": ["tabs", "tabGroups", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "background.js" },
  "action": { "default_title": "Tab Feed" },
  "side_panel": { "default_path": "panel.html" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
